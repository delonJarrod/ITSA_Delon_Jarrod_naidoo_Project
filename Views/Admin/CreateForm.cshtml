@model ITSA_Delon_Jarrod_naidoo.Models.User

<section class="feature-jobs bg_white pt-125 pb-140">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6">
                <div class="section-title text-start">
                    <h2 class="mb-0 wow fadeInRight" style="visibility: visible; animation-name: fadeInRight;">Create User</h2>
                </div>
            </div>
            <form id="userForm" asp-action="Create" method="post" class="pt-125">
                <div class="container card">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pt-40">
                                <div style="background-color: #f4f4f4; padding: 20px;">
                                    <h2 class="text-center">User Information</h2>
                                </div>
                                <div class="row pt-40" id="userInfoSection">
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Name:</label>
                                        <input class="form-control" type="text" asp-for="Name" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Surname:</label>
                                        <input class="form-control" type="text" asp-for="Surname" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Surname"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Date of Birth:</label>
                                        <input class="form-control" type="date" asp-for="DateOfBirth" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="DateOfBirth"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Identity Number:</label>
                                        <input class="form-control" type="text" asp-for="IdentityNumber" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="IdentityNumber"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Email Address:</label>
                                        <input class="form-control" type="email" asp-for="EmailAddress" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="EmailAddress"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Contact Number:</label>
                                        <input class="form-control" type="text" asp-for="ContactNumber" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="ContactNumber"></span>
                                    </div>                                    
                                    <div class="form-group col col-md-12 pt-3 pb-3 text-end">
                                        <button id="nextUserBtn" class="btn btn-primary w-50" type="button">Next</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pt-40">
                                <div style="background-color: #f4f4f4; padding: 20px;">
                                    <h2 class="text-center">Address Information</h2>
                                </div>
                                <div class="row pt-40" id="addressInfoSection" style="display: none;">
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Country:</label>
                                        <input class="form-control" type="text" asp-for="Address.Country" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Country"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Province:</label>
                                        <input class="form-control" type="text" asp-for="Address.Province" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Province"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>City:</label>
                                        <input class="form-control" type="text" asp-for="Address.City" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.City"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Suburb:</label>
                                        <input class="form-control" type="text" asp-for="Address.Suburb" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Suburb"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Postal Code:</label>
                                        <input class="form-control" type="text" asp-for="Address.PostalCode" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.PostalCode"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Unit Number:</label>
                                        <input class="form-control" type="text" asp-for="Address.UnitNumber" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.UnitNumber"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Complex Name:</label>
                                        <input class="form-control" type="text" asp-for="Address.ComplexName" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.ComplexName"></span>
                                    </div>

                                    <div class="form-group col col-md-12 pt-3 pb-3">
                                        <div class="row">
                                            <div class="col col-md-6">
                                                <button id="backAddressBtn" class="btn btn-secondary w-100" type="button" style="display: none;">Back</button>
                                            </div>
                                            <div class="col col-md-6">
                                                <button id="nextAddressBtn" class="btn btn-primary w-100" type="button" style="display: none;">Next</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pt-40">
                                <div style="background-color: #f4f4f4; padding: 20px;">
                                    <h2 class="text-center">Meter Information</h2>
                                </div>
                                <div class="row pt-40" id="meterInfoSection" style="display: none;">
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Serial Number:</label>
                                        <input class="form-control" type="text" asp-for="Address.Meter.SerialNumber" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Meter.SerialNumber"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Meter Type:</label>
                                        <input class="form-control" type="text" asp-for="Address.Meter.MeterType" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Meter.MeterType"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Asset Name:</label>
                                        <input class="form-control" type="text" asp-for="Address.Meter.AssetName" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Meter.AssetName"></span>
                                    </div>
                                    <div class="form-group col col-md-6 pt-3 pb-3">
                                        <label>Voltage Amperage:</label>
                                        <input class="form-control" type="number" asp-for="Address.Meter.VoltageAmperage" step="0.01" required />
                                        <span class="text-danger field-validation-error" asp-validation-for="Address.Meter.VoltageAmperage"></span>
                                    </div>

                                    <div class="form-group col col-md-12 pt-3 pb-3">
                                        <div class="row">
                                            <div class="col col-md-6">
                                                <button id="backMeterBtn" class="btn btn-secondary w-100" type="button" style="display: none;">Back</button>
                                            </div>
                                            <div class="col col-md-6">
                                                <button id="submitBtn" class="btn btn-success w-100" type="submit" style="display: none;">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input class="form-control" type="text" asp-for="UserId" style="display:none" />
            </form>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#nextUserBtn").click(function () {
            $("#userInfoSection").slideUp();
            $("#addressInfoSection").slideDown();
            $("#nextUserBtn").hide();
            $("#nextAddressBtn").show();
            $("#backAddressBtn").show();
        });

        $("#nextAddressBtn").click(function () {
            $("#addressInfoSection").slideUp();
            $("#meterInfoSection").slideDown();
            $("#nextAddressBtn").hide();
            $("#submitBtn").show();
            $("#backMeterBtn").show();
        });

        $("#backAddressBtn").click(function () {
            $("#addressInfoSection").slideUp();
            $("#userInfoSection").slideDown();
            $("#nextUserBtn").show();
            $("#nextAddressBtn").hide();
            $("#backAddressBtn").hide();
        });

        $("#backMeterBtn").click(function () {
            $("#meterInfoSection").slideUp();
            $("#addressInfoSection").slideDown();
            $("#submitBtn").hide();
            $("#nextAddressBtn").show();
            $("#backMeterBtn").hide();
        });
    });
</script>


