@model List<ITSA_Delon_Jarrod_naidoo.Models.User>

@if (Model != null && Model.Any())
{
    <section class="feature-jobs bg_white pt-125 pb-140">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-md-6">
                    <div class="section-title text-start">
                        <h2 class="mb-0 wow fadeInRight" style="visibility: visible; animation-name: fadeInRight;">Customers</h2>
                    </div>
                </div>
            </div>

            <div class="row pt-60">
                <div class="col-lg-12">
                    <div class="feature-job-tab">
                        <ul class="feature-job-list">
                            @foreach (var person in Model)
                            {

                                <li style="cursor: pointer;">
                                        <div class="single-feature-job wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                                            <div class="row">
                                                <div class="col col-md-2">
                                                    <h6 class="job-title">@person.Name</h6>
                                                </div>
                                                
                                                <div class="col col-md-2">
                                                    <h6 class="job-title"> @person.Surname</h6>
                                                </div>
                                                
                                                <div class="col col-md-2">
                                                    <div class="job-location me-3">
                                                       @person.ContactNumber
                                                    </div>
                                                </div>

                                            <div class="col col-md-2">
                                                <div class="job-location me-3">
                                                  @person.EmailAddress
                                                </div>
                                            </div>

                                            <div class="col col-md-2">
                                                <button onclick="View('@person.UserId')" type="button" class="btn btn-primary">View</button>
                                            </div>


                                         </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<script>
    function View(UserId) {
        debugger;
        $.ajax({
            url: "/Admin/ViewDetails",
            method: "GET",
            data: { Search: UserId },
            success: function (data) {
                $("#preloader").hide();
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
                $("#preloader").hide();
            }
        });
    }
</script>