@model ITSA_Delon_Jarrod_naidoo.Models.User

<section class="feature-jobs bg_white pt-125 pb-140">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6">
                <div class="section-title text-start">
                    <h3 class="mb-0 wow fadeInRight" style="visibility: visible; animation-name: fadeInRight;">Updated Infomation</h3>
                </div>
            </div>
            <form asp-action="Update" method="post" class="pt-125">
                <div class="container card">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pt-40">
                                <div style="background-color: #f4f4f4; padding: 20px;">
                                    <h3 class="text-center">User Information</h3>
                                </div>
                                <div class="row pt-40">
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Name:</label>
                                        <input class="form-control" type="text" asp-for="Name" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Surname:</label>
                                        <input class="form-control" type="text" asp-for="Surname" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Date of Birth:</label>
                                        <input class="form-control" type="date" asp-for="DateOfBirth" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Identity Number:</label>
                                        <input class="form-control" type="text" asp-for="IdentityNumber" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Email Address:</label>
                                        <input class="form-control" type="email" asp-for="EmailAddress" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Contact Number:</label>
                                        <input class="form-control" type="text" asp-for="ContactNumber" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pt-40">
                                <div style="background-color: #f4f4f4; padding: 20px;">
                                    <h3 class="text-center">Address Information</h3>
                                </div>
                                <div class="row pt-40">
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Country:</label>
                                        <input class="form-control" type="text" asp-for="Address.Country" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Province:</label>
                                        <input class="form-control" type="text" asp-for="Address.Province" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>City:</label>
                                        <input class="form-control" type="text" asp-for="Address.City" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Suburb:</label>
                                        <input class="form-control" type="text" asp-for="Address.Suburb" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Postal Code:</label>
                                        <input class="form-control" type="text" asp-for="Address.PostalCode" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Unit Number:</label>
                                        <input class="form-control" type="text" asp-for="Address.UnitNumber" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Complex Name:</label>
                                        <input class="form-control" type="text" asp-for="Address.ComplexName" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pt-40">
                                <div style="background-color: #f4f4f4; padding: 20px;">
                                    <h3 class="text-center">Meter Information</h3>
                                </div>
                                <div class="row pt-40">
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Serial Number:</label>
                                        <input class="form-control" type="text" asp-for="Address.Meter.SerialNumber" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label for="meterType">Meter Type:</label>
                                        <select class="form-control" id="meterType" asp-for="Address.Meter.MeterType">
                                            <option value="Electricity">Electricity</option>
                                            <option value="Water">Water</option>
                                            <option value="Solar">Solar</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Asset Name:</label>
                                        <input class="form-control" type="text" asp-for="Address.Meter.AssetName" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 pt-3 pb-3">
                                        <label>Voltage Amperage:</label>
                                        <input class="form-control" type="number" asp-for="Address.Meter.VoltageAmperage" step="0.01" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input class="form-control" type="text" asp-for="UserId" style="display:none" />
            </form>
        </div>
    </div>
</section>
