
<div class="container">
    <div class="login-container">
        <h1>Register An Account</h1>
        <form id="RegisterForm" asp-controller="Auth" asp-action="RegisterPost" method="post" class="pt-125">
            @Html.AntiForgeryToken()
                <div>
                    <label for="username">Username:</label>
                    <input type="email" id="username" name="username" placeholder="email" required>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" placeholder="password" required>
                </div>
            <button type="submit" onclick="submitForm">Register</button>
        </form>
    </div>
</div>

<script>
    function submitForm(event) {
        event.preventDefault();
        var formData = $('#RegisterForm').serialize();
            $.ajax({
            url: "/Auth/RegisterPost",
                type: 'POST',
                data: formData,
                success: function (response) {
                    console.log('Form submitted successfully');
                },
                error: function (xhr, status, error) {
                    console.error('Error submitting form:', error);
                }
            });
       
    }
</script>